<form class="ui stacked segment form" action="/station/{{station.id}}/addreading" method="POST">
    <div class="two fields">
        <div class="field">
            <label>Code</label>
            <input placeholder="Code" type="number" name="code">
        </div>
        <div class="field">
            <label>Temp</label>
            <input placeholder="Temperature" type="number" name="temperature">
        </div>
        <div class="field">
            <label>Wind Speed</label>
            <input placeholder="WindSpeed" type="number" name="windSpeed">
        </div>
        <div class="field">
            <label>Pressure</label>
            <input placeholder="Pressure" type="number" name="pressure">
        </div>
        <div class="field">
            <label>Wind Direction</label>
            <input placeholder="0-360" type="number" name="windDirection">
        </div>
    </div>
    <button class="ui black submit button">Add Reading</button>
    <div class="ui error message">
    </div>


    <p>
        <script>
            $('form.ui.form')
                .form({
                    on: 'blur',
                    fields: {
                        code: {
                            identifier: 'code',
                            rules: [
                                {
                                    type: 'empty',
                                    prompt: 'Please enter the weather code in 100s (100-800)'
                                },
                                {
                                    type: 'integer',
                                    prompt: 'Please enter a valid code'
                                }
                            ]
                        },
                        temperature: {
                            identifier: 'temperature',
                            rules: [
                                {
                                    type: 'empty',
                                    prompt: 'Please enter the temperature'
                                },
                                {
                                    type: 'number',
                                    prompt: 'Please enter a valid temperature'
                                }
                            ]
                        },
                        windSpeed: {
                            identifier: 'windSpeed',
                            rules: [
                                {
                                    type: 'empty',
                                    prompt: 'Please enter the wind speed'
                                },
                                {
                                    type: 'number',
                                    prompt: 'Please enter a valid wind speed reading'
                                }
                            ]
                        },
                        pressure: {
                            identifier: 'pressure',
                            rules: [
                                {
                                    type: 'empty',
                                    prompt: 'Please enter the pressure'
                                },
                                {
                                    type: 'decimal',
                                    prompt: 'Please enter a valid pressure reading'
                                }
                            ]
                        },
                        windDirection: {
                            identifier: 'windDirection',
                            rules: [
                                {
                                    type: 'empty',
                                    prompt: 'Please enter the wind direction (0-360Â°)'
                                },
                                {
